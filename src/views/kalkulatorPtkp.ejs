        return number.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
      }

      // Fungsi untuk menghapus koma dari string dan mengembalikan angka
      function parseNumber(str) {
        return parseFloat(str.replace(/,/g, '')) || 0;
      }

