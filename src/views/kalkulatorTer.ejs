        const input = document.getElementById(id);
        input.addEventListener("input", function () {
          let value = this.value.replace(/[^0-9,]/g, "");
          let number = value.replace(/,/g, "");
          if (number && !isNaN(number)) {
            this.value = formatNumber(number);
          } else {
            this.value = value;
          }
        });
      });

